<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/decoration_background_color"
    android:hapticFeedbackEnabled="false"
    tools:context=".View.SignUpActivity">


    <ScrollView
        android:id="@+id/scrollView1"
        style="@android:style/Widget.Material.Light.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_createAccount">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ImageBlackWoman"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginEnd="20dp"
                            android:background="#E1D6C3"
                            android:foreground="@drawable/ic_launcher_background"
                            android:foregroundTint="#B3020202"
                            android:src="@drawable/ic_usr_boy1" />

                        <ImageView
                            android:id="@+id/GrayWoman"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginEnd="20dp"
                            android:background="#E1D6C3"
                            android:foreground="@drawable/ic_launcher_background"
                            android:foregroundTint="#B3020202"
                            android:src="@drawable/ic_usr_woman" />

                        <ImageView
                            android:id="@+id/ImageGreenWoman"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="#E1D6C3"
                            android:foreground="@drawable/ic_launcher_background"
                            android:foregroundTint="#B3020202"
                            android:src="@drawable/ic_usr_woman1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ImageBlackMan"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginEnd="20dp"
                            android:background="#E1D6C3"
                            android:foreground="@drawable/ic_launcher_background"
                            android:foregroundTint="#B3020202"
                            android:src="@drawable/ic_usr_boy2" />

                        <ImageView
                            android:id="@+id/ManGray"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginEnd="20dp"
                            android:background="#E1D6C3"
                            android:foreground="@drawable/ic_launcher_background"
                            android:foregroundTint="#B3020202"
                            android:src="@drawable/ic_usr_boy3" />

                        <ImageView
                            android:id="@+id/ImageWeroMan"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="#E1D6C3"
                            android:foreground="@drawable/ic_launcher_background"
                            android:foregroundTint="#B3020202"
                            android:src="@drawable/ic_usr_woman2" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_emailRegister"
                style="@style/CustomInputTextLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="18dp"
                android:hint="Correo Electronico"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_emailRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_userNameRegister"
                style="@style/CustomInputTextLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="18dp"
                android:hint="Nombre de Usuario"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_userNameRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="#000000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_passwordRegister"
                style="@style/CustomInputTextLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="18dp"
                android:hint="Contraseña"
                app:errorEnabled="true"
                app:helperText="Menor a 8 Digitos"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_passwordRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_confirmPasswordRegister"
                style="@style/CustomInputTextLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="10dp"
                android:hint="Confirmar Contraseña"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_confirmPasswordRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="#000000" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/button_createAccount"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="18dp"
                android:text="Crear Cuenta"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView_createAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-medium"
        android:text="Crear Cuenta"
        android:textColor="#094470"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView1">

        <TextView
            android:id="@+id/textView_AlreadyIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="¿Ya tienes Cuenta?"
            android:textColor="#6B6B6B"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_toLogin"
            style="?borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:scrollbarThumbHorizontal="@android:color/transparent"
            android:scrollbarThumbVertical="@android:color/transparent"
            android:text="Inicio"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>